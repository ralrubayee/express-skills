<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>express dev skills</title>
  <link rel="stylesheet" href="/stylesheets/style.css">
</head>
<body>
  
  <h1>my skills</h1>
  <% if(error) { %>
    <h2><%= error %></h2>
  <% } %>
  <ul>
    <% skills.forEach(function(skill) { %>
      <li>
        <form 
          action="/skills/<%= skill._id %>?_method=DELETE"
          class="delete-form"
          method="POST"
        >
          <button type="submit">X</button>
        </form>
        <a href="/skills/<%= skill._id %>"><%= skill.text %></a>
          - 
        <%= skill.done ? 'done' : 'not done' %>
      </li>
    <% }) %>
  </ul>
  <a href="/skills/new">Add new skill</a>
 
</body>
</html>